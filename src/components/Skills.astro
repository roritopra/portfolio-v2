---
import Bgskills from "../icons/Bgskills.astro";

import { Image } from "astro:assets";

const skills = [
  { id: 1, src: "/js.png", alt: "Javascript", tooltip: "Javascript" },
  { id: 2, src: "/html.png", alt: "HTML", tooltip: "HTML" },
  { id: 3, src: "/css.png", alt: "CSS", tooltip: "CSS" },
  { id: 4, src: "/sass.png", alt: "SASS", tooltip: "SASS" },
  { id: 5, src: "/tailwind.png", alt: "Tailwind", tooltip: "Tailwind" },
  { id: 6, src: "/React.png", alt: "React", tooltip: "React" },
  { id: 7, src: "/astro.png", alt: "Astro", tooltip: "Astro" },
  { id: 8, src: "/kotlin.png", alt: "Kotlin", tooltip: "Kotlin" },
];

const others = [
  { id: 1, src: "/git.png", alt: "Git", tooltip: "Git" },
  { id: 2, src: "/github.png", alt: "GitHub", tooltip: "GitHub" },
  {
    id: 3,
    src: "/visualstudio.png",
    alt: "Visual Studio",
    tooltip: "Visual Studio",
  },
  { id: 4, src: "/figma.png", alt: "Figma", tooltip: "Figma" },
  { id: 5, src: "/photoshop.png", alt: "Photoshop", tooltip: "Photoshop" },
  {
    id: 6,
    src: "/after-effects.png",
    alt: "After Effects",
    tooltip: "After Effects",
  },
  {
    id: 7,
    src: "/android-studio.png",
    alt: "Android Studio",
    tooltip: "Android Studio",
  },
];
---

<style>
  .section-background {
    height: auto;
    left: 90%;
    margin-top: -11%;
    transform: translateX(-45%);
    width: 200%;
    z-index: 10;
    mix-blend-mode: lighten;
    pointer-events: none;
    position: absolute;
    top: 0;
  }
  .section-background img {
    z-index: 60;
    left: 0;
    position: absolute;
    top: 0;
    width: 50%;
  }

  @media only screen and (max-width: 800px) {
    .section-background {
      left: 69%;
      margin-top: -30%;
      transform: translateX(-45%);
      width: 200%;
    }
    .section-background img {
      width: 600%;
    }
  }
</style>

<section
  class="flex justify-center flex-col items-center w-screen relative z-10"
>
  <div class="section-background">
    <Bgskills />
  </div>
  <div class="flex justify-center flex-col items-center mb-20">
    <h6
      style="background: var(--titlessubtitles, linear-gradient(89deg, #01EBA6 0%, #01D398 34.90%, #01A47D 69.79%, #018C77 97.97%));
background-clip: text;
-webkit-background-clip: text;
-webkit-text-fill-color: transparent;"
      class="relative z-40 text-center mb-2 text-xl font-bold tracking-tight max-md:text-base"
    >
      Skills
    </h6>
    <h2
      class="relative z-30 text-center text-white font-bold text-5xl mb-3 max-md:text-3xl"
    >
      Frontend
    </h2>
  </div>
  <article
    class="flex flex-wrap justify-center items-center gap-12 mb-44 max-md:gap-6 max-md:px-6 max-md:mb-24"
  >
    {
      skills.map((skill) => {
        return (
          <div class="relative">
            <Image
              src={skill.src}
              alt={skill.alt}
              quality={"mid"}
              width={100}
              height={100}
              class="w-[45px] h-[45px] max-md:w-8 max-md:h-8"
            />
          </div>
        );
      })
    }
  </article>
  <div class="flex justify-center flex-col items-center mb-20">
    <h2
      class="relative z-30 text-center text-white font-bold text-5xl mb-3 max-md:text-3xl"
    >
      Other
    </h2>
  </div>
  <article
    class="flex flex-wrap justify-center items-center gap-12 mb-32 max-md:gap-6 max-md:px-6"
  >
  {
    others.map((skill) => {
      return (
        <div class="relative">
          <Image
            src={skill.src}
            alt={skill.alt}
            quality={"mid"}
            width={100}
            height={100}
            class="w-[45px] h-[45px] max-md:w-8 max-md:h-8"
          />
        </div>
      );
    })
  }
  </article>
</section>
